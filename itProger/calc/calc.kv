
<MyMDRaisedButton@MDRaisedButton>
    font_size: '18sp'
    halign: 'center'
    walign: 'middle'
    #size_hint: 1, 0.15
    #text_size: self.size
    md_bg_color: 140 / 255, 140 / 255, 140 / 255, 1

<Container>
    rows: 6
    text_input: text_input

    AnchorLayout:
        anchor_y: 'top'
        size_hint: 1, 0.15
        padding: [30, 0, 30, 0]

        MDTextField:
            text: '0'
            id: text_input
            font_size: '45sp'
            input_filter: 'int'
            input_type: 'number'
            multiline: False
            hint_text: "Введите число"

    AnchorLayout:
        anchor_y: 'top'
        padding: [30, 50, 30, 0]

        GridLayout:
            cols: 5
            MyMDRaisedButton:
                text: '1'
                on_release:
                    root.btNum('1')
            MyMDRaisedButton:
                text: '2'
                on_release:
                    root.btNum('2')
            MyMDRaisedButton:
                text: '3'
                on_release:
                    root.btNum('3')
            MyMDRaisedButton:
                text: '*'
                id: bt_multiply
            MyMDRaisedButton:
                text: 's'
                id: bt_square
            MyMDRaisedButton:
                text: '4'
                on_release:
                    root.btNum('4')
            MyMDRaisedButton:
                text: '5'
                on_release:
                    root.btNum('5')
            MyMDRaisedButton:
                text: '6'
                on_release:
                    root.btNum('6')
            MyMDRaisedButton:
                text: '/'
                id: bt_divide
            MyMDRaisedButton:
                text: '%'
                id: bt_percent
            MyMDRaisedButton:
                text: '7'
                on_release:
                    root.btNum('7')
            MyMDRaisedButton:
                text: '8'
                on_release:
                    root.btNum('8')
            MyMDRaisedButton:
                text: '9'
                on_release:
                    root.btNum('9')
            MyMDRaisedButton:
                text: '+'
                on_release:
                    root.btPlus()
            MyMDRaisedButton:
                text: 'x2'
                id: bt_square
            MyMDRaisedButton:
                text: '0'
                on_release:
                    root.btNum('0')
            MyMDRaisedButton:
                text: '.'
                id: bt_dot
            MyMDRaisedButton:
                text: 'АС'
                md_bg_color: 171 / 255, 55 / 255, 19 / 255, 1
                id: btClear
                on_release:
                    root.btClear()
            MyMDRaisedButton:
                text: '-'
                id: bt_minus
            MyMDRaisedButton:
                text: '='
                id: bt_equals



